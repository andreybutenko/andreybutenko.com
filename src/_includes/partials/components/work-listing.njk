{%- for work in collections.featuredWork  %}
  <div class="work-experience-item">
    <img src="/assets/work/{{ work.data.image }}" alt="{{ work.data.company }} logo" />
    <h2><a href="{{ work.url }}" class="lowviz">{{ work.data.role }}</a></h2>
    <h3>{{ work.data.company }}, {{ work.data.timeframe }}</h3>
    {{ work.templateContent | safe }}
    <button class="primary-ghost">More information</button>
  </div>
{%- endfor %}